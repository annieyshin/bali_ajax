<%= render "layouts/errors", :object => @product %>

<%= form_for @product, remote: true do |f| %>
  <%= f.label :name %>
  Name: <%= f.text_field :name %>
  <hr>
  <%= f.label :description %>
  Description: <%= f.text_field :description %>
  <hr>
  <%= f.label :price %>
  Password: <%= f.number_field :price %>
  <hr>
<%= f.submit "Submit" %>

<% end %>

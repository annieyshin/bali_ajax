<h3>Products</h3>
<hr>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= link_to product.name, product_path(product), remote: true %></h4>
      <p id="product<%= product.id %>"><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart", remote: true %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
